<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:hint="Input"
        android:inputType="numberDecimal"
        android:textColor="#1d1d1d"
        android:textColorHint="#484848"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="Output"
        android:textColor="#1d1d1d"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="#bababa" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="#bababa" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:background="#bababa" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dcdcdc">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/inputKmToMBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="km to miles"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputMToKmBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Miles to Kilometers"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputCelToFahrBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Celsius to Fahrenheit"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputFarToCelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Fahrenheit to Celsius"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputKgToPoundBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="kg to pounds"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputPoundToKgBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="pounds to kg"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputKgToStoneBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="kg to stones"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputStoneToKgBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Stones to Kilograms"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputMeterToFeetBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Meters to Feet"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputFeetToMeterBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Feet to Meters"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputInchToCmBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="inches to cm"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputCmToInchBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="cm to inches"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputMmToInchBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="mm to inches"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputInchToMmBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="inches to mm"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputInchToftBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Inches to Feet"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/inputFtToInchBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                android:text="Feet to Inches"
                android:textColor="#e6e6e6"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
